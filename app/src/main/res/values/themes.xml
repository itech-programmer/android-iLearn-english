<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Base.Theme.AppCompat.Light.DarkActionBar -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/colorAccent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_accent_color</item>
        <item name="android:navigationBarColor">@color/background_accent_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bottom_animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_alpha_out</item>
        <item name="android:windowExitAnimation">@anim/popup_alpha_in</item>
    </style>

    <style name="search_view_animation" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="commitIcon">@drawable/ic_search_black</item>
        <item name="autoCompleteTextViewStyle">@style/auto_complete_text_view_style</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:hint">@string/search</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">26sp</item>
        <item name="android:maxWidth">9999dp</item>
    </style>

    <style name="auto_complete_text_view_style" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:popupBackground">@color/transparent</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <!--styles for text input-->
    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/text_input_hint</item>
    </style>

    <style name="text_input_hint" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="text_input" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/header_text_mini</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="alert_dialog">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

</resources>